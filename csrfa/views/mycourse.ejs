<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Include Tailwind CSS via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">
    <title>Course List</title>
</head>
<body>
    <div class="min-h-screen bg-gray-100 p-8">
        <div class="max-w-screen-xl mx-auto">
            <!-- Add buttons in a column -->
           
            
            
            <div class="mt-8">
                <!-- Add a header section with a professional color -->
                <div class="text-3xl font-bold mb-4 text-center text-indigo-700">My Course List</div>
            </div>
            <div class="flex flex-grow flex-wrap -mx-4">
                <!-- Create a row of course boxes with a professional light green background -->
                <% for (let pack of packs) { %>
                    <div class="w-full md:w-1/2 lg:w-1/3 p-4">
                        <div class="p-6 bg-green-300 text-gray-800 rounded-lg shadow-md hover:bg-indigo-300 transition duration-300 ease-in-out transform hover:scale-105">
                            <div class="text-xl font-bold mb-2">
                                <%= pack.heading %>
                                <a href="/viewcourseadmin/<%= pack.id %>" class="enroll-link bg-blue-500 text-white font-semibold px-4 py-2 rounded-lg mb-2 hover:bg-blue-800 transition duration-300 ease-in-out inline-block">view the coure you have created</a>
                            </div>
                           
                       
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>
